{
    "manifest_version": 3,
    "name": "LeetFont",
    "version": "1.0.0",
    "description": "A Chrome extension that lets you customize and change the font on LeetCode for improved readability.",
    "permissions": [
        "storage",
        "activeTab"
    ],
    "host_permissions": [
        "https://leetcode.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://leetcode.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end",
            "all_frames": false
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "injected.js"
            ],
            "matches": [
                "https://leetcode.com/*"
            ]
        }
    ],
    "action": {
        "default_popup": "./popup/index.html",
        "default_title": "LeetFont - [No Cursor Issue]",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}